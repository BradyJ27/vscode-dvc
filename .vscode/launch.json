{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension (Hot Reload + Dev UI for dev-server)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/extension",
        "${workspaceFolder}/demo",
        "--disable-extensions"
      ],
      "env": {
        "HOT_RELOAD": "true",
        "USE_DEV_UI": "true"
      },
      "outFiles": ["${workspaceFolder}/extension/dist/**/*.js"]
    },
    {
      "name": "Run All Extensions (Hot Reload + Dev UI for dev-server)",
